<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.media.MediaView?>


<BorderPane xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller">
   <bottom>
      <VBox spacing="5.0" BorderPane.alignment="CENTER">
         <children>
            <HBox alignment="CENTER">
               <children>
                  <Slider fx:id="timeSlider" minWidth="1150.0">
                     <HBox.margin>
                        <Insets />
                     </HBox.margin>
                  </Slider>
                  <Label fx:id="playTime" text="00:00/00:00" />
               </children>
               <VBox.margin>
                  <Insets />
               </VBox.margin>
               <padding>
                  <Insets left="10.0" />
               </padding>
            </HBox>
            <HBox spacing="20.0">
               <children>
                  <Button fx:id="Playbtn" mnemonicParsing="false" text="||" />
                  <Button fx:id="stopButton" mnemonicParsing="false" onAction="#stopMedia" text="Stop" />
                  <Button fx:id="fileChooseButton" mnemonicParsing="false" onAction="#fileChoose" text="Choose File" />
                  <ImageView fx:id="volIMG" fitHeight="32.0" fitWidth="33.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../../../../../../Songs/vol.png" />
                     </image>
                  </ImageView>
                  <Slider fx:id="volSlider" />
                  <ComboBox fx:id="speedControl" onAction="#changeSpeed" prefWidth="150.0" promptText="Speed" />
               </children>
               <padding>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </padding>
               <VBox.margin>
                  <Insets />
               </VBox.margin>
            </HBox>
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
         <BorderPane.margin>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </BorderPane.margin>
      </VBox>
   </bottom>
   <center>
      <Pane BorderPane.alignment="CENTER">
         <children>
            <MediaView fx:id="mediaView" fitHeight="600.0" fitWidth="1280.0" nodeOrientation="INHERIT" />
         </children>
      </Pane>
   </center>
</BorderPane>
